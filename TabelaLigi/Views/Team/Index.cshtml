@model IEnumerable<TabelaLigi.Db.Models.Team>
<h2>Tabla ligi</h2>
<table class="table">
    <thead class="text-center">
    <tr>
        <th scope="row">ID</th>
        <th scope="row">Nazwa zespołu</th>
        <th scope="row" colspan="3">Akcje</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var team in Model)
    {
        <tr>
            <th scope="row">@team.Id</th>
            <td>@team.Name</td>
            <td><a href="@Url.ActionLink("Details",
                             "Team",
                             new {Id = @team.Id})" class="btn btn-secondary">ℹ️ Szczegóły</a></td>
            <td><a href="/" class="btn btn-primary">📝 Edytuj</a></td>
            <td><a href="/" class="btn btn-danger">🗑️ Usuń</a></td>
            <td></td>
        </tr>
    }
    </tbody>
</table>