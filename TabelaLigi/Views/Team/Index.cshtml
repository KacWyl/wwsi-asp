@model System.Collections.Immutable.ImmutableList<TabelaLigi.Db.Models.Team>
@{
    static string GetRowClassFromPosition(int idx, int total)
    {
        if (idx >= total - 3)
        {
            return "table-danger";
        }
        return idx switch {
            0 => "table-success",
            <= 2 => "table-primary",
            _ => string.Empty
            };
    }
}
